
@model PagedList.Core.IPagedList<Assignment2.Entities.Photo>

@{
    ViewData["Title"] = "Home Page";
}

<h2>Photo Album</h2>
<div class="container">
    <tr>
        <td align="left" colspan="5">
            <pager list="@Model" asp-controller="Home" asp-action="Index"></pager>
        </td>
    </tr>
    <div class="col-lg-12">
        @foreach (var item in Model)
        {

            <div class="col-lg-4 col-md-4 col-sm-6 portfolio-item">
              
                    <a href="@item.url"><img class="card-img-top" src="@item.thumbnailUrl" alt=""></a>
                    <div class="card-body">
                      
                        <p class="card-text"  >@item.title</p>
                    </div>
                </div>
            



        }
    </div>
        <tr>
            <td align="left" colspan="5">
                <pager list="@Model" asp-controller="Home" asp-action="Index"></pager>
            </td>
        </tr>
    </div>




